<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back_reg">

    <EditText
        android:id="@+id/username"
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="60dp"
        android:drawableLeft="@drawable/profile"
        android:paddingLeft="5dp"
        android:background="@drawable/shape"
        android:ems="10"
        android:hint="  Username"
        android:inputType="textEmailAddress"
        android:textColor="#99131313"
        android:textColorHint="#99131313"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />


    <EditText
        android:id="@+id/registrationEmailAddress"
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:layout_marginStart="61dp"
        android:layout_marginEnd="60dp"
        android:drawableLeft="@drawable/email"
        android:paddingLeft="5dp"
        android:background="@drawable/shape"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="  Mail"
        android:inputType="textEmailAddress"
        android:textColor="#99131313"
        android:textColorHint="#99131313"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username" />

    <EditText
        android:id="@+id/registrationPassword"
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape"
        android:ems="10"
        android:hint="  Password"
        android:drawableLeft="@drawable/password"
        android:paddingLeft="5dp"
        android:inputType="textPassword"
        android:textColor="#99131313"
        android:textColorHint="#99131313"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registrationEmailAddress" />


    <Button
        android:id="@+id/registrationButton"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="144dp"
        android:background="@drawable/shape"
        android:text="Registration"
        android:textSize="20sp"
        android:textColor="#293241"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registrationPasswordRepeat" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="78dp"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="78dp"
        android:fontFamily="@font/val"
        android:text="Sign Up"
        android:textColor="#FFFFFF"
        android:textSize="60sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/registrationPasswordRepeat"
        android:layout_width="290dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:background="@drawable/shape"
        android:hint="  Confirm Password"
        android:inputType="textPassword"
        android:drawableLeft="@drawable/password"
        android:paddingLeft="5dp"
        android:textColor="#99131313"
        android:textColorHint="#99131313"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registrationPassword" />

    <CheckBox
        android:id="@+id/termsOfServiceCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="80dp"
        android:text="I agree all statements in"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registrationPasswordRepeat" />

    <TextView
        android:id="@+id/termsOfService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="87dp"
        android:text="Terms of service"
        android:textColor="#FFFFFF"
        android:textSize="13sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/termsOfServiceCheckBox"
        app:layout_constraintTop_toBottomOf="@+id/registrationPasswordRepeat" />

    <TextView
        android:id="@+id/ageText"
        android:layout_width="290dp"
        android:layout_height="38dp"
        android:layout_marginStart="169dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:drawableLeft="@drawable/cake"
        android:paddingLeft="5dp"
        android:layout_marginEnd="169dp"
        android:background="@drawable/shape"
        android:text="  Select Birth Date"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/registrationPasswordRepeat" />

</androidx.constraintlayout.widget.ConstraintLayout>